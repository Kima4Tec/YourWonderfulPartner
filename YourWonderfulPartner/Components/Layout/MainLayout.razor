@inherits LayoutComponentBase
@using YourWonderfulPartner.Services
@inject EditState EditState

<div class="main-container" style="margin-bottom:30px">
    <header class="topbar">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white  box-shadow mb-3">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <NavLink class="navbar-brand" href="">YourWonderfulPartner</NavLink>
                    <ul class="navbar-nav flex-grow-1">

                        @if (!EditState.IsAdmin)
                        {
                            <li class="nav-item">
                                <NavLink class="nav-link" href="brugeropret">Opret bruger</NavLink>
                            </li>

                            <li class="nav-item">
                                <NavLink class="nav-link" href="andet">Om os</NavLink>
                            </li>
                        }




                        @if (EditState.IsAdmin)
                        {
                            <li class="nav-item">
                                <NavLink class="nav-link" href="AddAndEdit">Konto</NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="AddAndEdit">Beskeder</NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="AddAndEdit">Likes</NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="AddAndEdit">Matches</NavLink>
                            </li>
                            <li class="flex-grow-1">
                            </li>
                            <li class="nav-item flex-grow-3">
                                <NavLink class="nav-link" href="AccessAdmin">Logout</NavLink>
                            </li>
                        }
                        else
                        {
                            <li class="flex-grow-1">
                            </li>
                            <li class="nav-item flex-grow-3">
                                <NavLink class="nav-link" href="AccessAdmin">Login</NavLink>
                            </li>

                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <main>
        <article>
            @Body
        </article>
    </main>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="app.css" />

<style>
    .main-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1;
    }
</style>




